<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue3"
    android:orientation="vertical"
    tools:context="com.example.responsi.Info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Tumbuhan"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:background="@drawable/latar">
        <!--id-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID tumbuhan"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--kondisi-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kondisi tumbuhan"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--nama_tumbuhan-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan harian"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--kerusakan-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kerusakan"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--waktu taman-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu tanam"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--prediksi-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi panen"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--hitung mundur-->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung mundur panen"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/latar"
            android:textColor="@color/black"
            android:text="Print" />
        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/latar"
            android:textColor="@color/black"
            android:text="Back" />
    </RelativeLayout>
</LinearLayout>
